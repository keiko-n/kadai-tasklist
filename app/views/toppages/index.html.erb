<%#----トップページ----%>

<%#----///ログインしていたらユーザのタスク一覧を表示する///----%>
<% if logged_in? %>
 <%= current_user.name %>さんのタスク一覧
 
 <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
<% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
<%#----///ログインていなかったらトップページ・新規登録ボタン///----%>
<% else %>
<div class="center jumbotron">
  <div class="text-center">
    <h1>My Tasklist</h1>
    <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-info' %>
  </div>
</div>
<% end %>