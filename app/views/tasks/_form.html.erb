<%#---///新規タスクとタスクの編集フォーム///---%>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-lg-offset-3 col-lg-6">
        
<%= form_for (task) do |f| %>
    <%#---エラーメッセージ---%>
    <%= render 'layouts/error_tasks', model: f.object %>
    
    <div class="form-group">
    <%= f.label :status, 'ステータス' %>
    <%= f.select(:status, [['準備中'],['進行中'], ['完了']], {}, class: "form-control") %>
    </div>
    
    <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
    </div>
    
    <%= f.submit '投稿', class: 'btn btn-info' %>
<% end %>
    </div>
 </div>
</div>
